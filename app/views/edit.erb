<h1>Edit Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2><label for="name">Name: </label>
    <input type="text" name="name" value="<%= @recipe.name %>"></h2>
  <h2><label for="ingredients">Ingredients: </label>
      <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></h2>
  <h2><label for="cook_time">Cook Time: </label>
      <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></h2>
  <p><input type="submit" id="submit" value="submit"></p>
</form>
