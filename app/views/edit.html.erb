<h1><%= "#{@recipe.name}" %></h>
<h3>
<p><%= "Ingredients: #{@recipe.ingredients}"%></p>
<p><%= "This takes #{@recipe.cook_time} to make!" %></p></h3>



<form class="" action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>
    <label for="name">Update Recipe Name</label>
    <input type="text" name="name" value="<%= @recipe.name %>">
    <label for="name">Update Recipe Ingredients</label>
    <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
    <label for="name">Update Recipe Cook Time</label>
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>">
  </p>
  <input type="submit" value="submit">
</form>

<!-- DELETE BUTTON  -->
  <form action="/recipes/<%= @recipe.id %>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
  </form>
